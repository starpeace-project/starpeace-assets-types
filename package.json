{
  "name": "starpeace-assets-types",
  "version": "0.3.13",
  "description": "STARPEACE common type library for asset and gameplay configurations",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git://github.com/starpeace-project/starpeace-assets-types.git"
  },
  "author": "starpeace-project",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "run-s build test:*",
    "test:lint": "eslint src --ext .ts",
    "test:unit": "cross-env mocha --loader=ts-node/esm 'tst/**/*.spec.ts'",
    "watch:build": "tsc -p tsconfig.json -w",
    "cov": "run-s build test:unit cov:html cov:lcov && open-cli coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:lcov": "nyc report --reporter=lcov",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --json build/docs/typedoc.json",
    "prepare-release": "run-s test cov:check doc:html",
    "prepare": "npm run build",
    "prepublishOnly": "npm test"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.9",
    "@types/lodash": "^4.14.200",
    "@types/mocha": "^10.0.3",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "chai": "^4.3.10",
    "cross-env": "^7.0.3",
    "eslint": "^8.52.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.0",
    "lodash": "^4.17.21",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "open-cli": "^7.2.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.2",
    "typescript": "^5.2.2"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "LICENSE",
    "README.md"
  ],
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
